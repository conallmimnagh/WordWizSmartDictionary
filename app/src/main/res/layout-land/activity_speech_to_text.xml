<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".SpeechToTextActivity">

    <TextView
        android:id="@+id/txvResult"
        android:layout_width="368dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/btnSpeak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="321dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:onClick="getSpeechInput"
        android:src="@drawable/google_mic_img" />

    <TextView
        android:id="@+id/txtSpeechActivityTitle"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/smushitalic_qqav"
        android:text="Speech to Text"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/txtpagedesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="73dp"
        android:text="Click The Mic icon to start the speech recognition" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="152dp"
        android:text="Press the text output to see the dictionary definition of your word"
        android:textAlignment="center" />

</RelativeLayout>